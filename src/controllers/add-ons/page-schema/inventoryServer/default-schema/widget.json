{
  "widget": [
    {
      "name": "Total Count",
      "type": "card",
      "options": {
        "value_options": {
          "key": "value",
          "options": {
            "default": 0
          }
        }
      },
      "query": {
        "aggregate": [
          {
            "count": {
              "name": "value"
            }
          }
        ]
      }
    },
    {
      "name": "Total vCPU Count",
      "type": "card",
      "options": {
        "value_options": {
          "key": "value",
          "options": {
            "default": 0
          }
        }
      },
      "query": {
        "aggregate": [
          {
            "group": {
              "fields": [
                {
                  "name": "value",
                  "key": "data.hardware.core",
                  "operator": "sum"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "Total Memory Size",
      "type": "card",
      "options": {
        "value_options": {
          "key": "value",
          "type": "size",
          "options": {
            "source_unit": "GB",
            "default": 0
          }
        }
      },
      "query": {
        "aggregate": [
          {
            "group": {
              "fields": [
                {
                  "name": "value",
                  "key": "data.hardware.memory",
                  "operator": "sum"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "Total Disk Size",
      "type": "card",
      "options": {
        "value_options": {
          "key": "value",
          "type": "size",
          "options": {
            "source_unit": "GB",
            "default": 0
          }
        }
      },
      "query": {
        "aggregate": [
          {
            "unwind": {
              "path": "disks"
            }
          },
          {
            "group": {
              "fields": [
                {
                  "name": "value",
                  "key": "disks.size",
                  "operator": "sum"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "Count By Region",
      "type": "chart",
      "options": {
        "chart_type": "COLUMN",
        "name_options": {
          "key": "name",
          "reference": {
            "resource_type": "inventory.Region",
            "reference_key": "region_code"
          }
        }
      },
      "query": {
        "aggregate": [
          {
            "group": {
              "keys": [
                {
                  "name": "name",
                  "key": "region_code"
                }
              ],
              "fields": [
                {
                  "name": "value",
                  "operator": "count"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "Count By Instance Type",
      "type": "chart",
      "options": {
        "chart_type": "TREEMAP"
      },
      "query": {
        "aggregate": [
          {
            "group": {
              "keys": [
                {
                  "name": "name",
                  "key": "data.compute.instance_type"
                }
              ],
              "fields": [
                {
                  "name": "value",
                  "operator": "count"
                }
              ]
            }
          }
        ]
      }
    },
    {
      "name": "Count By Account",
      "type": "chart",
      "options": {
        "chart_type": "DONUT"
      },
      "query": {
        "aggregate": [
          {
            "group": {
              "keys": [
                {
                  "name": "name",
                  "key": "account"
                }
              ],
              "fields": [
                {
                  "name": "value",
                  "operator": "count"
                }
              ]
            }
          }
        ],
        "filter": [
          {
            "key": "account",
            "value": true,
            "operator": "exists"
          }
        ]
      }
    }
  ]
}
